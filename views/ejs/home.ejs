<div id="home">
    <h1 id="accountTitle"></h1>
    <a href="/logout">Logout</a>

    <div id="mainContent">
        <div id="tables">
            <div class="tableHead">
                <h2>Income</h2>
                <button id="createIncomeBtn" class="addButton">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="16"></line>
                        <line x1="8" y1="12" x2="16" y2="12"></line>
                    </svg>
                </button>
            </div>
            <table id="incomeTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Amount</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody id="incomeBody"></tbody>
            </table>

            <div class="tableHead">
                <h2>Bills</h2>
                <button id="createBillBtn" class="addButton">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="16"></line>
                        <line x1="8" y1="12" x2="16" y2="12"></line>
                    </svg>
                </button>
            </div>
            <table id="billsTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Amount</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody id="billsBody"></tbody>
            </table>

            <div class="tableHead">
            <h2>Allowances</h2>
                <button id="createAllowanceBtn" class="addButton">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="16"></line>
                        <line x1="8" y1="12" x2="16" y2="12"></line>
                    </svg>
                </button>
            </div>
            <table id="allowancesTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Amount</th>
                        <th>Spent</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody id="allowancesBody"></tbody>
            </table>
        </div>

        <div id="transactions">
            <div class="tableHead">
                <h2>Transactions</h2>
                
                <button id="createTransactionBtn" class="addButton">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="12" y1="8" x2="12" y2="16"></line>
                        <line x1="8" y1="12" x2="16" y2="12"></line>
                    </svg>
                </button>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Location</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody id="transactionsBody"></tbody>
            </table>
        </div>

        <div id="stats">
            <label class="bigLabel">BALANCE:
                <p id="statsBalance"></p>
            </label>

            <h3 id="statsMonth"></h3>
            
            <label>Discretionary:
                <p id="statsDiscretionary"></p>
            </label>

            <label>Remaining Discretionary:
                <p id="statsRemainingDiscretionary"></p>
            </label>

            <label>Income:
                <p id="statsIncome"></p>
            </label>

            <label>Bills:
                <p id="statsBills"></p>
            </label>

            <label>Allowances:
                <p id="statsAllowances"></p>
            </label>
        </div>
    </div>
</div>