<div id="createTransactionModal" class="modal" style="display:none;">
    <form id="createTransactionForm">
        <h2>New Transaction</h2>

        <label>Amount:
            <input id="createTransactionAmount" type="number" step="0.01" required>
        </label>

        <label>Tags:
            <input id="createTransactionTags" type="text">
        </label>

        <label>Location:
            <input id="createTransactionLocation" type="text">
        </label>

        <label>Date:
            <input id="createTransactionDate" type="date" required>
        </label>

        <label>Note:
            <textarea id="createTransactionNote"></textarea>
        </label>

        <div class="formButton">
            <input type="submit" value="Submit">

            <button id="createTransactionCancel" type="button">Cancel</button>
        </div>
    </form>
</div>