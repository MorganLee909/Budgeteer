<div id="transactionModal" class="modal" style="display:none;">
    <svg id="transactionClose" class="closeModal" width="35" height="35" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="15" y1="9" x2="9" y2="15"></line>
        <line x1="9" y1="9" x2="15" y2="15"></line>
    </svg>

    <h2 id="transactionDate"></h2>

    <label class="transactionLabel">Location:
        <p id="transactionLocation"></p>
    </label>
    
    <label class="transactionLabel">Category:
        <p id="transactionCategory"></p>
    </label>
    
    <label class="transactionLabel">Amount:
        <p id="transactionAmount"></p>
    </label>
    
    <p class="bold">Note:</p>
    <p id="transactionNote"></p>

    <button id="deleteTransaction" class="button red">Delete</button>
</div>